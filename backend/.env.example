# 服务器配置
PORT=3000
NODE_ENV=development

# 数据库配置
# 支持的类型: json, mongodb, mysql, postgresql
DB_TYPE=json

# JSON数据库配置（默认）
JSON_DATA_DIR=./data

# MongoDB配置（可选）
# MONGODB_URI=mongodb://localhost:27017/file-share

# MySQL配置（可选）
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_USER=root
# MYSQL_PASSWORD=your_password
# MYSQL_DATABASE=file_share

# PostgreSQL配置（可选）
# PG_HOST=localhost
# PG_PORT=5432
# PG_USER=postgres
# PG_PASSWORD=your_password
# PG_DATABASE=file_share

# JWT配置 - 生产环境请务必修改为复杂的随机字符串
JWT_SECRET=your-super-secret-jwt-key-please-change-in-production-min-32-chars

# 文件上传配置
MAX_FILE_SIZE=524288000
# 最大单个文件大小（字节），默认 500MB (524288000 字节)
# 100MB = 104857600
# 500MB = 524288000
# 1GB = 1073741824

BODY_LIMIT=500mb
# Express 请求体大小限制，应该大于或等于 MAX_FILE_SIZE

# 分享链接配置
DEFAULT_SHARE_EXPIRE_DAYS=7
# 默认分享链接有效期（天）

# 日志配置
LOG_LEVEL=info
# 日志级别: error, warn, info, debug

# 日志文件配置（可选，使用更清晰的命名）
# LOG_FILE_MAX_SIZE=20971520
# 单个日志文件最大大小（字节），默认 20MB
# LOG_MAX_FILES_PER_DAY=10
# 每天最多日志文件数，默认 10个
# LOG_RETENTION_DAYS=30
# 日志保留天数，默认 30天

# 兼容旧配置（如果上面的新配置未设置，将使用这些）
# LOG_MAX_SIZE=20971520
# LOG_MAX_FILES=10
# LOG_MAX_DAYS=30

# 安全配置
RATE_LIMIT_WINDOW_MS=900000
# 速率限制时间窗口（毫秒），默认15分钟
RATE_LIMIT_MAX_REQUESTS=100
# 时间窗口内最大请求数

# CORS配置
CORS_ORIGIN=*
# 允许的前端域名，支持多个源（用逗号分隔）
# 开发环境示例: http://localhost:3001,http://localhost:8001
# 生产环境示例: https://yourdomain.com,https://www.yourdomain.com
# 允许所有源: * (不推荐用于生产环境，但方便部署测试)

# 分片上传配置
CHUNK_SIZE=20971520
# 分片大小（字节），默认 20MB (20971520 字节)
# 1MB = 1048576
# 5MB = 5242880
# 10MB = 10485760
# 20MB = 20971520
# 50MB = 52428800

# 存储配额配置
DEFAULT_USER_QUOTA=10737418240
# 默认用户存储配额（字节），默认 10GB (10737418240 字节)
# 1GB = 1073741824
# 5GB = 5368709120
# 10GB = 10737418240
# 50GB = 53687091200
# 100GB = 107374182400

# 回收站配置
RECYCLE_BIN_RETENTION_DAYS=30
# 回收站文件保留天数，默认30天

# 会话配置
SESSION_TIMEOUT_MS=3600000
# 会话超时时间（毫秒），默认1小时
# 30分钟 = 1800000
# 1小时 = 3600000
# 24小时 = 86400000

# 上传会话配置
UPLOAD_SESSION_TIMEOUT_MS=3600000
# 上传会话超时时间（毫秒），默认1小时

# 临时文件清理配置
TEMP_FILE_CLEANUP_INTERVAL_MS=3600000
# 临时文件清理间隔（毫秒），默认1小时

# 性能配置
MAX_CONCURRENT_UPLOADS=5
# 最大并发上传数

# 缓存配置
PREVIEW_CACHE_MAX_AGE=3600
# 预览缓存时间（秒），默认1小时

# 目录配置
FILES_DIR=./files
# 文件存储目录，默认 ./files

LOG_DIR=./logs
# 日志存储目录，默认 ./logs
