{
  "name": "file-share-backend",
  "version": "2.0.0",
  "description": "支持多数据库的文件分享系统",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "check": "node scripts/check-version.js",
    "init-db": "node scripts/init-db.js",
    "backup": "node scripts/backup-data.js",
    "migrate": "node scripts/migrate-db.js",
    "build": "node scripts/build-app.js",
    "build:win": "pkg . --targets node18-win-x64 --output dist/file-share-win.exe",
    "build:linux": "pkg . --targets node18-linux-x64 --output dist/file-share-linux",
    "build:macos": "pkg . --targets node18-macos-x64 --output dist/file-share-macos",
    "build:all": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "bin": "server.js",
  "pkg": {
    "assets": [
      "src/**/*",
      "scripts/**/*",
      ".env.example",
      "node_modules/jimp/**/*"
    ],
    "outputPath": "dist",
    "targets": [
      "node18-win-x64",
      "node18-linux-x64",
      "node18-macos-x64"
    ]
  },
  "keywords": [
    "file-share",
    "database-adapter",
    "json",
    "mongodb",
    "mysql",
    "postgresql"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.6.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.5.1",
    "fs-extra": "^9.1.0",
    "helmet": "^4.6.0",
    "jimp": "^0.16.1",
    "jsonwebtoken": "^8.5.1",
    "jszip": "^3.7.1",
    "mongodb": "^3.7.3",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^2.3.3",
    "pg": "^8.7.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "pkg": "^5.8.1"
  }
}
